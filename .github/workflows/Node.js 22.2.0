name: ğŸš€ Build React Native App (Node.js 22.2.0 with Cache)

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: â¬‡ï¸ Checkout Repository
        uses: actions/checkout@v4

      - name: âš™ï¸ Setup Node.js v22.2.0
        uses: actions/setup-node@v4
        with:
          node-version: 22.2.0
          cache: 'npm'

      - name: ğŸ’¾ Cache node_modules
        uses: actions/cache@v3
        with:
          path: node_modules
          key: ${{ runner.os }}-node-${{ hashFiles('package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-node-

      - name: ğŸ“¦ Install Dependencies
        run: npm ci

      - name: âœ… Run Lint (Optional)
        run: npm run lint || true

      - name: ğŸ—ï¸ Build Project
        run: npm run build || echo "âš ï¸ No build script defined"

      - name: âœ… Done
        run: echo "âœ… CI build complete using Node.js 22.2.0"
